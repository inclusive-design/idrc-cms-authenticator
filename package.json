{
	"name": "idrc-cms-authenticator",
	"version": "1.1.5",
	"engines": {
		"node": ">=23"
	},
	"description": "GitHub and GitLab OAuth client for Sveltia CMS and Decap CMS",
	"repository": "https://github.com/inclusive-design/idrc-cms-authenticator",
	"main": "index.js",
	"scripts": {
		"start": "node app.js",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"prepare": "husky",
		"test": "c8 --all -r clover -r text ava"
	},
	"keywords": [
		"decap-cms",
		"sveltia-cms",
		"github",
		"gitlab",
		"auth"
	],
	"author": "OCAD University <idrc@ocadu.ca>",
	"license": "BSD-3-Clause",
	"dependencies": {
		"cookie-parser": "^1.4.6",
		"dotenv": "^16.4.5",
		"express": "^4.19.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.2",
		"ava": "^6.1.3",
		"c8": "^10.1.2",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"supertest": "^7.0.0"
	},
	"lint-staged": {
		"*.{js,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
